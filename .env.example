# Database configuration
# ==================

# Database Type (sqlite or postgres)
# Change this to postgres after migration is complete
DATABASE_TYPE=sqlite

# SQLite Configuration
SQLITE_DB_PATH=ollama_instances.db

# PostgreSQL Configuration
POSTGRES_DB=ollama_scanner
POSTGRES_USER=ollama
POSTGRES_PASSWORD=ollama_scanner_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# Connection Pool Configuration
DB_MIN_CONNECTIONS=5
DB_MAX_CONNECTIONS=50
DB_CONNECTION_TIMEOUT=30

# pgAdmin Configuration (for database management)
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=pgadmin_password
PGADMIN_PORT=5050

# Discord Bot Configuration
# =========================
DISCORD_BOT_TOKEN=your_discord_bot_token

# Scan/Benchmark Configuration
# ===========================
SCAN_TIMEOUT=60
VERIFICATION_TIMEOUT=30
ENABLE_BENCHMARKING=true

# Logging Configuration
# ====================
LOG_LEVEL=INFO
LOG_FILE=ollama_scanner.log 